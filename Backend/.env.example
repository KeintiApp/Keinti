# Example environment variables for Keinti Backend
# Copy to .env and fill with real values (do NOT commit .env)

PORT=3000
POST_TTL_MINUTES=1440

# Database (Supabase Postgres recommended)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DB_SSL=true

# JWT
JWT_SECRET=replace_me

# Upload paths
UPLOAD_PATH=./uploads
PROFILE_PHOTOS_PATH=./uploads/profile_photos

# Supabase
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_ANON_KEY=replace_me_public_anon_key
SUPABASE_SERVICE_ROLE_KEY=replace_me_server_only
SUPABASE_STORAGE_BUCKET=keinti_media

# Email sending via Resend (HTTP API â€“ works on Render, no SMTP needed)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=Keinti <auth@oficial.keintiapp.com>

# Google Places (server-side proxy for the mobile app; do NOT expose in the client)
GOOGLE_PLACES_API_KEY=replace_me
